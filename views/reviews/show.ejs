<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <p class="lead">CK Reviews</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-sm-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=review.posterURL%>" alt="">
                <div class="caption">
                    <h4 class="pull-right">1994</h4>
                    <h4><%=review.title%></h4>
                    <p><%= review.reviewText %></p>
                    <p>
                        <em>Submitted By <%= review.author.username %></em>
                    </p>
                    <% if (currentUser && review.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-xs btn-warning" href="/reviews/<%= review._id %>/edit">Edit</a>
                        <form class="delete-form" action="/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                        <a href="/reviews/<%=review._id%>/comments/new" class="btn btn-primary">Add New Comment</a>
                </div>
                <hr>
                <% if (review.comments.length > 0) { %>
                    <% review.comments.forEach((comment) => { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%=comment.author.username%></strong>
                                <span class="pull-right">10 Days Ago</span>
                                <p>
                                    <%=comment.text%>
                                </p>
                                <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                                    <a class="btn btn-xs btn-warning" 
                                        href="/reviews/<%= review._id %>/comments/<%= comment._id %>/edit">
                                        Edit
                                    </a>
                                    <form class="delete-form" action="/reviews/<%= review._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-xs btn-danger">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                    <% } else { %>
                        <li>No Comments</li>
                    <% } %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>