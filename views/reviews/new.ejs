<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Write a new review</h1>
        <div style="width: 30%; margin: 40px auto">
            <form action="/reviews" method="post">
                <div class="form-group">
                        <input class="form-control" type="text" name="imdbID" placeholder="paste imdbID here">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="title" placeholder="movie title">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="posterURL" placeholder="paste poster url here">
                    </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="reviewText" placeholder="type review here">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="rating" placeholder="your rating">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/reviews">Go Back</a>
        </div>
        
    </div>
</div>




<% include ../partials/footer %>