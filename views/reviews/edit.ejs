<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Update review for <%= review.title %></h1>
        <div style="width: 30%; margin: 40px auto">
            <form action="/reviews/<%= review._id %>?_method=PUT" method="post">
                <div class="form-group">
                        <input class="form-control" type="text" name="review[imdbID]" placeholder="paste imdbID here" value="<%= review.imdbID %>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="review[title]" placeholder="movie title" value="<%=review.title%>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="review[posterURL]" placeholder="paste poster url here" value="<%=review.posterURL%>">
                    </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="review[reviewText]" placeholder="type review here" value="<%=review.reviewText%>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="review[rating]" placeholder="your rating" value="<%=review.rating%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/reviews">Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>