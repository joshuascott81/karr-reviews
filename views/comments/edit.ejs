<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 40px auto">
            <form action="/reviews/<%= review_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                        <button class="btn btn-large btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/reviews/<%=review_id%>">Go Back</a>
        </div>
        
    </div>
</div>