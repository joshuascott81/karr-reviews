<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add new comment to <%= review.title %></h1>
        <div style="width: 30%; margin: 40px auto">
            <form action="/reviews/<%=review._id%>/comments" method="post">
                <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="type comment here">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="type your name here">
                </div>
                <div class="form-group">
                        <button class="btn btn-large btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/reviews/<%=review._id%>">Go Back to <%=review.title%></a>
        </div>
        
    </div>
</div>